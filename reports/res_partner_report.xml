<odoo>
    <template id="report_res_partner_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="partner">
                <div class="page">
                    <h2 t-esc="partner.name"/>
                    <p><strong>NIT:</strong> <span t-esc="partner.vat or 'N/A'"/></p>
                    <p><strong>Teléfono:</strong> <span t-esc="partner.phone or 'N/A'"/></p>
                    <p><strong>Dirección:</strong> <span t-esc="partner.contact_address"/></p>
                    <p><strong>Email:</strong> <span t-esc="partner.email or 'N/A'"/></p>
                </div>
            </t>
        </t>
    </template>

    <report
        id="action_report_res_partner_document"
        model="res.partner"
        string="Contact Report"
        report_type="qweb-pdf"
        name="test_dev_denteco.report_res_partner_document"
        file="test_dev_denteco.report_res_partner_document"
        print_report_name="'Contacts - %s' % (object.name)"
    />
</odoo>

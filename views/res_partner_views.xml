<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Vista tree-->
        <record id="view_tree_hr_liquidation" model="ir.ui.view">
            <field name="name">hr.liquidation.meca.tree</field>
            <field name="model">hr.liquidation.meca</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Secuencia"/>
                    <field name="employee_id" string="Empleado"/>
                    <field name="type" string="Motivo"/>
                    <field name="amount_total" string="Total"/>
                </tree>

            </field>
        </record>

        <!-- Vista formulario-->
        <record id="view_form_hr_liquidation" model="ir.ui.view">
            <field name="name">hr.liquidation.meca.form</field>
            <field name="model">hr.liquidation.meca</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="process" string="En proceso" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="done" string="Pagado" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'process')]}"/>
                        <field name="state" widget="statusbar" options="{'clickable':1}" statusbar_visible="draft,process,done" />
                    </header>
                    <sheet>
                        <group>
                            <field name="name" style="font-size: 24px; font-weight: bold; color: #7E6EAC;" readonly="1"/>
                            <group>
                                <field name="employee_id" widget="Many2one" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}" attrs="{'readonly': [('state', '=', 'done')]}"/>
                                <field name="amount_isr" string="Devolución ISR" attrs="{'readonly': [('state', '=', 'done')]}"/>
                                <field name="last_wage" attrs="{'readonly': [('state', '=', 'done')]}"/> 
                                <field name="days_wage" attrs="{'readonly': [('state', '=', 'done')]}"/> 
                                <field name="extra_hours" attrs="{'readonly': [('state', '=', 'done')]}"/> 
                                <field name="g_mov" attrs="{'readonly': [('state', '=', 'done')]}"/>
                                <field name="variable_bonus" attrs="{'readonly': [('state', '=', 'done')]}"/> 
                                <field name="discounts" attrs="{'readonly': [('state', '=', 'done')]}"/>  
                                <field name="type" attrs="{'readonly': [('state', '=', 'done')]}"/>                        
                            </group>
                            <group>
                                <field name="amount_6" invisible="1"/>
                                <field name="amount_12" invisible="1"/>
                                <field name="amount_bf" invisible="1"/>
                                <field name="amount_bd" invisible="1"/>
                                <field name="acconunt_ids" invisible="1"/>
                                <field name="analytic_id" invisible="0" options="{'no_open': True, 'no_create_edit': True, 'no_create': True}" attrs="{'readonly': [('state', '=', 'done')]}"/>
                                <field name="amount_salary" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="amount_duducciones" invisible="1"/>
                                <field name="amount_devengado" invisible="1"/>
                                <field name="amount_v10" attrs="{'readonly': [('state', '=', 'done')]}" invisible="1"/> 
                                <field name="last_date_b14" attrs="{'readonly': [('state', '=', 'done')]}"/> 
                                <field name="last_date_aguinaldo" attrs="{'readonly': [('state', '=', 'done')]}"/> 
                                <field name="account_move_close"  readonly="1" attrs="{'invisible': [('state', '!=', 'done')]}"/>
                                <button name="amount_liquidation" string="Calcular" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Resultados">
                                <group>
                                    <label for="title_type" string=" " name="title_type"/>
                                    <div class="o_row">
                                        <p style="color: green; font-weight: bold;"> →  </p>
                                        <field name="title_type" class="oe_inline" readonly="1" style="color: green; font-weight: bold;"/>
                                        <p style="color: green; font-weight: bold;"> →  </p>
                                        <field name="title_date_start" class="oe_inline" readonly="1" style="color: green; font-weight: bold;"/>
                                        <p style="color: green; font-weight: bold;">→  </p>
                                        <field name="title_date_end" class="oe_inline" readonly="1" style="color: green; font-weight: bold;"/>
                                        <p style="color: green; font-weight: bold;">→  </p>
                                        <field name="title_days" class="oe_inline" readonly="1" style="color: green; font-weight: bold;"/>
                                        <p style="color: green; font-weight: bold;">→  </p>
                                        <field name="title_pay" class="oe_inline" readonly="1" style="color: green; font-weight: bold;"/>
                                    </div>
                                    <!--INDEMNIZACION-->
                                    <label for="title_indem" string=" " name="title_indem"/>
                                    <div class="o_row">
                                        <p style="color: black; font-weight: bold;"> →  </p>
                                        <field name="title_indem" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;"> →  </p>
                                        <field name="date_start" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;">→  </p>
                                        <field name="date_end" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;">→  </p>
                                        <field name="days_indemnizacion" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;">→  </p>
                                        <field name="amount_indemnizacion" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                    </div>
                                    <!--AGUINALDO-->
                                    <label for="title_aguinaldo" string=" " name="title_aguinaldo"/>
                                    <div class="o_row">
                                        <p style="color: black; font-weight: bold;"> →  </p>
                                        <field name="title_aguinaldo" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;"> →  </p>
                                        <field name="date_start_aguinaldo" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;">→  </p>
                                        <field name="date_end" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;">→  </p>
                                        <field name="days_aguinaldo" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;">→  </p>
                                        <field name="amount_aguinaldo" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                    </div>
                                    <!--BONO 14-->
                                    <label for="title_bono" string=" " name="title_bono"/>
                                    <div class="o_row">
                                        <p style="color: black; font-weight: bold;"> →  </p>
                                        <field name="title_bono" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;"> →  </p>
                                        <field name="date_start_b14" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;">→  </p>
                                        <field name="date_end" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;">→  </p>
                                        <field name="days_bono14" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;">→  </p>
                                        <field name="amount_b14" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                    </div>
                                    <!--VACACIONES-->
                                    <label for="title_vacaciones" string=" " name="title_vacaciones"/>
                                    <div class="o_row">
                                        <p style="color: black; font-weight: bold;"> →  </p>
                                        <field name="title_vacaciones" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;"> →  </p>
                                        <field name="date_start" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;">→  </p>
                                        <field name="date_end" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;">→  </p>
                                        <field name="days_vacaciones" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;">→  </p>
                                        <field name="amount_vacaciones" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                    </div>
                                    <!--SALARIO-->
                                    <label for="title_salario" string=" " name="title_salario"/>
                                    <div class="o_row">
                                        <p style="color: black; font-weight: bold;"> →  </p>
                                        <field name="title_salario" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;"> →  </p>
                                        <field name="date_start_salario" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;">→  </p>
                                        <field name="date_end" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;">→  </p>
                                        <field name="days_salario" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                        <p style="color: black; font-weight: bold;">→  </p>
                                        <field name="amount_salario" class="oe_inline" readonly="1" style="color: black; font-weight: bold;"/>
                                    </div>
                                    <!--TOTAL-->
                                    <label for="title_total" string=" " name="title_salario"/>
                                    <div class="o_row">
                                        <p style="color: red; font-weight: bold;"> →  </p>
                                        <field name="title_total" class="oe_inline" readonly="1" style="color: red; font-weight: bold;"/>
                                        <p style="color: red; font-weight: bold;"> →  </p>
                                        <field name="title_" class="oe_inline" readonly="1" style="color: red; font-weight: bold;"/>
                                        <p style="color: red; font-weight: bold;">→  </p>
                                        <field name="title_" class="oe_inline" readonly="1" style="color: red; font-weight: bold;"/>
                                        <p style="color: red; font-weight: bold;">→  </p>
                                        <field name="title_" class="oe_inline" readonly="1" style="color: red; font-weight: bold;"/>
                                        <p style="color: red; font-weight: bold;">→  </p>
                                        <field name="amount_total" class="oe_inline" readonly="1" style="color: red; font-weight: bold;"/>
                                    </div>
                                </group>
                            </page>
                            <page name="data" string="Datos">
                                <field name="data"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="o_attachment_preview"/>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Inicializacion de vistas cuentas-->
        <record id="action_hr_liquidation" model="ir.actions.act_window">
            <field name="name">Liquidaciones</field>
            <field name="res_model">hr.liquidation.meca</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem
            id="menu_hr_liquidation"
            name="Liquidaciones"
            parent="hr.menu_hr_root"
            sequence="10"
            action="action_hr_liquidation"
        />


        <!--Vista tree de cuentas-->
        <record id="view_tree_account_liquidation" model="ir.ui.view">
            <field name="name">hr.liquidation.accounnt.tree</field>
            <field name="model">hr.liquidation.accounnt</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Secuencia"/>
                </tree>
            </field>
        </record>

        <!-- Vista formulario pacientes-->
        <record id="view_form_account_liquidation" model="ir.ui.view">
            <field name="name">hr.liquidation.accounnt.form</field>
            <field name="model">hr.liquidation.accounnt</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" style="font-size: 24px; font-weight: bold; color: #7E6EAC;"/>
                            <group>
                                <field name="account_1" string="Cuenta 1"/>
                                <field name="account_2" string="Cuenta 2"/>
                                <field name="account_3" string="Cuenta 3"/>
                                <field name="account_4" string="Cuenta 4"/>
                                <field name="account_5" string="Cuenta 5"/>
                                <field name="account_6" string="Cuenta 6"/>
                                <field name="account_7" string="Cuenta 7"/>
                                <field name="account_8" string="Cuenta 8"/>
                                <field name="account_9" string="Cuenta 9"/>
                                
                            </group>
                            <group>
                                <field name="account_10" string="Cuenta 10"/>
                                <field name="account_11" string="Cuenta 11"/>
                                <field name="account_12" string="Cuenta 12"/>
                                <field name="account_13" string="Cuenta 13"/>
                                <field name="account_14" string="Cuenta 14"/>
                                <field name="account_15" string="Cuenta 15"/>
                                <field name="account_16" string="Cuenta 16"/>
                                <field name="account_17" string="Cuenta 17"/>
                                <field name="account_18" string="Cuenta 18"/>
                                <field name="account_19" string="Cuenta 19"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="o_attachment_preview"/>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Inicializacion de vistas cuentas-->
        <record id="action_account_liquidation" model="ir.actions.act_window">
            <field name="name">Cuentas</field>
            <field name="res_model">hr.liquidation.accounnt</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem
            id="menu_planning_account_liqui"
            name="Cuentas Liquidaciones"
            parent="hr.menu_human_resources_configuration"
            sequence="8"
            action="action_account_liquidation"
        />

    </data>
</odoo>